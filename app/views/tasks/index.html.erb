
<div class="container">
    <div class="card border-0 shadow mt-5">
        <div class="card-body p-4">
            <h1 class="text-center fw-bold">Tasks</h1>
        </div>
    </div>

    <%= turbo_stream_from 'task' %>
    <div id="tasks-list">
        <% @tasks.each do |task| %>
            <div class="card border-0 shadow mt-5">
                <div class="card-body p-4">
                <div class="row">
                    <div class="col-6">
                        <h4><%= task.title %></h4>
                    </div>
                    <div class="col-6 text-end">
                        <%= link_to 'Show details', task_path(task), class: 'btn btn-primary' %>
                    </div>
                </div>
                </div>
            </div>
        <% end %>
    </div>
</div>